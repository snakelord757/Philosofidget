<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/widget_settings_toggle_min_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/colorPickerTitle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center|start"
        android:layout_weight="7"
        android:textSize="@dimen/widget_settings_text_size"
        tools:text="Настройка, которая открывает пикер цвета" />

    <FrameLayout
        android:id="@+id/colorViewContainer"
        android:layout_width="@dimen/color_view_size"
        android:layout_height="@dimen/color_view_size"
        android:layout_gravity="center"
        android:background="@drawable/color_view_shape"
        android:contentDescription="@null"
        android:outlineProvider="background">

        <View
            android:id="@+id/colorView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</LinearLayout>